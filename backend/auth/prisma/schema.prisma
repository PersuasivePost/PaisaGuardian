// Prisma schema for auth service
// Uses DATABASE_URL from environment (set in backend/.env)

// Prisma 7 datasource configuration should be provided at runtime via
// prisma.config.ts or via the PrismaClient constructor. Keep the
// provider here and ensure DATABASE_URL is set in your environment
// when running migrations or instantiating the client.
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  provider      String
  providerId    String   @unique
  email         String?  @unique
  name          String?
  picture       String?
  // Permissions stored as string array (Postgres supports arrays)
  permissions   String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
}
